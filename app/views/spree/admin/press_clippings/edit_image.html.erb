<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @press_clipping } %>

<% content_for :page_title do %>
  <%= Spree.t(:edit_image) %>
<% end %>

<%= form_for @image, as: :post, url: update_image_admin_press_clipping_path(@press_clipping, @image), html: { multipart: true } do |f| %>
  <fieldset data-hook="edit_press_clipping_image">
    <%= render 'image_form', f: f %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), images_admin_press_clipping_path(@press_clipping), icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
