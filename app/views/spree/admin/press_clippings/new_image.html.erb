<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @press_clipping } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_image) %>
<% end %>

<%= form_for Spree::Image.new(), as: :post, url: create_image_admin_press_clipping_path, html: { multipart: true } do |f| %>
  <fieldset data-hook="new_press_clipping_image">
    <%= render 'image_form', f: f %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), '/spree.admin_product_images_url(@product)', icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
